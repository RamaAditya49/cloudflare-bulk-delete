# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Optional: Override default API base URL
# CLOUDFLARE_API_BASE_URL=https://api.cloudflare.com/client/v4

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cleanup.log

# Safety Configuration
DEFAULT_DRY_RUN=true
DEFAULT_KEEP_LATEST=1
ENABLE_PRODUCTION_PROTECTION=true

# Rate Limiting
API_RATE_LIMIT=5
BULK_OPERATION_BATCH_SIZE=10
OPERATION_TIMEOUT=30000

# Cleanup Policies
MAX_DEPLOYMENT_AGE_DAYS=30
MAX_PREVIEW_AGE_DAYS=7
CLEANUP_SCHEDULE_ENABLED=false
CLEANUP_SCHEDULE_CRON=0 2 * * *

# Monitoring & Alerts (Optional)
# WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
# EMAIL_ALERTS_ENABLED=false
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@domain.com
# EMAIL_PASSWORD=your_app_password

# Development & Testing
NODE_ENV=production
DEBUG_MODE=false
MOCK_API_CALLS=false